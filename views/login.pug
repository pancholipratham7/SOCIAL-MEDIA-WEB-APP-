extends ./layouts/login-layout
block content
    .loginContainer
        h1 Login 
        p.errorMessage #{errorMessage}
        form(method ='POST')
            input(type="text" name='logUserName' placeholder='Username or email' value=logUserName required="")
            input(type="password" name='logPassword' value=logPassword placeholder='password' required="")
            input(type='submit' value="Login")
        a(href="/register") Need an account? Register here. 